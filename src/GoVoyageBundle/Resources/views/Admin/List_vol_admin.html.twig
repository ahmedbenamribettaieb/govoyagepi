{% extends "GoVoyageBundle::layout_admin.html.twig" %}
{% block username %}
{{ u }}
    {% endblock %}
{% block content %}
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Liste des vols :</h3>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Vous pouvez consulter les vols ici :</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action">
                                <thead>
                                <tr class="headings">
                                    <th class="column-title">Nom du Vol </th>
                                    <th class="column-title">Nom du Compagnie </th>
                                    <th class="column-title">Départ </th>
                                    <th class="column-title">Arrivée </th>
                                    <th class="column-title">Prix </th>
                                    <th class="column-title">Supprimer </th>
                                    </th>
                                    <th class="bulk-actions" colspan="7">
                                        <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for v in vols %}
                                <tr class="even pointer">
                                    <td class=" ">{{ v.nomVol }}</td>
                                    <td class=" ">{{ v.nomCompagnie }} </td>
                                    <td class=" ">{{ v.depart }} <i class="success fa fa-long-arrow-up"></i></td>
                                    <td class=" ">{{ v.arrivee }}</td>
                                    <td class="a-right a-right ">{{ v.prixVol }} TND</td>
                                    <td class=" last"><a href="{{ path('Backend_suppr_vol',{'id':v.numticket}) }}">Supprimer ce vol</a>
                                    </td>
                                </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}