{% extends 'GoVoyageBundle::layout_admin.html.twig' %}
{% block username %}
    {{ u }}
{% endblock %}
{% block notification %}
    <li role="presentation" class="dropdown">
        <a href="javascript:;" class="dropdown-toggle info-number" data-toggle="dropdown" aria-expanded="false">
            <i class="fa fa-envelope-o"></i>
            <span class="badge bg-green">6</span>
        </a>
        <ul id="menu1" class="dropdown-menu list-unstyled msg_list" role="menu">
            {% for i in notif %}

                <li>
                    <a>
                        <span class="image"><img src="{{ asset('img/comment-01.png') }}" alt="Profile Image"/></span>
                        <span>
                          <span>{{ i.Subject }}</span>
                          <span class="time">{{ i.date | date("d/m/y") }}</span>
                        </span>
                        <span class="message">
                          {{ i.message }}
                        </span>
                    </a>
                </li>
            {% endfor %}
            <li>
                <div class="text-center">
                    <a>
                        <strong>See All Alerts</strong>
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>
            </li>
        </ul>
    </li>
{% endblock notification %}

{% block content %}
    <div class="right_col" role="main">
        <div class="">

            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Voyage Personalié
                                <small> Affichage / Suppression</small>
                            </h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <div class="row">

                                <p>Voyage personalisé List</p>
                                {% for v in voyagepersonalises %}
                                    <div class="col-md-55">
                                        <div class="thumbnail">
                                            <div class="image view view-first">
                                                <img style="width: 100%; display: block;"
                                                     src="{{ asset('img/tour-09-g.jpg') }}" alt="image"/>
                                                <div class="mask">
                                                    <p>{{ v.VilleArrive }}</p>
                                                    <div class="tools tools-bottom">
                                                        <a href="{{ path('Backend_vp_supp',{'id':v.IdVp}) }}"><i class="fa fa-times"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="caption">
                                                <center>
                                                    <p>{{ v.nom }}</p>
                                                </center>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}