{% extends 'GoVoyageBundle::layout_admin.html.twig' %}
{% block username %}
    {{ u }}
{% endblock %}

{% block content %}
    <div class="right_col" role="main">
        <div class="">

            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Voyage Personalisé
                                <small> Affichage / Suppression</small>
                            </h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="row">

                                <p>Voyage personalisé List</p>

                                Nom
                                <form action="{{ path('Backend_vp') }}" method="get">
                                    <div class="input-a">
                                        <input name="filter" type="text">
                                    </div>
                                    <button type="submit" class="srch-btn">Chercher</button>
                                </form>
                                {% for v in voyagepersonalises %}
                                    <div class="col-md-55">
                                        <div class="thumbnail">
                                            <div class="image view view-first">
                                                <img style="width: 100%; display: block;"
                                                     src="{{ asset('img/tour-09-g.jpg') }}" alt="image"/>
                                                <div class="mask">
                                                    <p>{{ v.VilleArrive }}</p>
                                                    <div class="tools tools-bottom">
                                                        <a href="{{ path('Backend_vp_supp',{'id':v.IdVp}) }}"><i class="fa fa-times"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="caption">
                                                <center>
                                                    <p>{{ v.nom }}</p>
                                                </center>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}