{% extends "GoVoyageBundle::layout_admin.html.twig" %}
{% block username %}
    {{ u }}
{% endblock %}
{% block content %}
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Liste des vols :</h3>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Vous pouvez consulter les vols ici :</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action">
                                <thead>
                                <tr class="headings">
                                    <th class="column-title">model </th>
                                    <th class="column-title">Numero de matricule </th>
                                    <th class="column-title">type </th>
                                    <th class="column-title">duration </th>
                                    <th class="column-title">id agence de location de voiture </th>
                                    <th class="column-title">date de pris </th>
                                    <th class="column-title">date de recuperation </th>
                                    <th class="column-title">id client </th>
                                    <th class="column-title">rate </th>
                                    <th class="column-title">Supprimer </th>
                                    </th>
                                    <th class="bulk-actions" colspan="7">
                                        <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for v in vols %}
                                    <tr class="even pointer">
                                        <td class=" ">{{ v.model }}</td>
                                        <td class=" ">{{ v.regno }} </td>
                                        <td class=" ">{{ v.type }} <i class="success fa fa-long-arrow-up"></i></td>
                                        <td class=" ">{{ v.duration }}</td>
                                        <td class=" ">{{ v.alvVoFk }}</td>
                                        <td class=" ">{{ v.depart |date("d-m-y") }}</td>
                                        <td class=" ">{{ v.arrivee |date("d-m-y") }}</td>
                                        <td class=" ">{{ v.clientVoFk }}</td>
                                        <td class="a-right a-right ">{{ v.rate }}</td>
                                        <td class=" last"><a href="{{ path('Backend_voiture_supp',{'id':v.id_Voiture}) }}">Supprimer ce vol</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}