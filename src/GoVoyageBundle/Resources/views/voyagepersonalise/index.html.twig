{% extends 'GoVoyageBundle::layout_template.html.twig' %}

{% block content %}
    <h1>Voyagepersonalises list</h1>

    <table>
        <thead>
            <tr>
                <th>Idvp</th>
                <th>Nom</th>
                <th>Villedepart</th>
                <th>Villearrive</th>
                <th>Datedepart</th>
                <th>Datearrive</th>
                <th>Nbrparticipant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voyagepersonalise in voyagepersonalises %}
            <tr>
                <td><a href="{{ path('voyagepersonalise_show', { 'idVp': voyagepersonalise.idVp }) }}">{{ voyagepersonalise.idVp }}</a></td>
                <td>{{ voyagepersonalise.nom }}</td>
                <td>{{ voyagepersonalise.villeDepart }}</td>
                <td>{{ voyagepersonalise.villeArrive }}</td>
                <td>{% if voyagepersonalise.dateDepart %}{{ voyagepersonalise.dateDepart|date('Y-m-d') }}{% endif %}</td>
                <td>{% if voyagepersonalise.dateArrive %}{{ voyagepersonalise.dateArrive|date('Y-m-d') }}{% endif %}</td>
                <td>{{ voyagepersonalise.nbrParticipant }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('voyagepersonalise_show', { 'idVp': voyagepersonalise.idVp }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('voyagepersonalise_edit', { 'idVp': voyagepersonalise.idVp }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('voyagepersonalise_new') }}">Create a new voyagepersonalise</a>
        </li>
    </ul>
{% endblock %}
