{% extends 'GoVoyageBundle:chambre:layout_template_chambre.html.twig' %}

{% block ahmed %}
    <h1>Chambre</h1>

    <table>
        <tbody>

            <tr>
                <th>Type</th>
                <td>{{ chambre.type }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ chambre.prix }}</td>
            </tr>
            <tr>
                <th>Clientchfk</th>
                <td>{{ chambre.clientChFk }}</td>
            </tr>
            <tr>
                <th>Hotelchfk</th>
                <td>{{ chambre.hotelChFk }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('chambre_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('chambre_edit', { 'id': chambre.id}) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
