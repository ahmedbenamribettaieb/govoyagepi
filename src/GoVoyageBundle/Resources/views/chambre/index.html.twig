{% extends "GoVoyageBundle:chambre:layout_template_chambre.html.twig" %}


{% block content %}
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even){background-color: #f2f2f2}

        th {
            background-color: #c76300;
            color: white;
        }
    </style>

    <table class="tablech" border="1" align="center">
        <thead>
        <tr>
            <th>numero</th>
            <th>type</th>
            <th>prix</th>

        </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td><a href="{{ path('chambre_show', { 'id': chambre.id }) }}">{{ chambre.id }}</a></td>
                <td >{{ chambre.type }}</td>
                <td>{{ chambre.prix }}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
