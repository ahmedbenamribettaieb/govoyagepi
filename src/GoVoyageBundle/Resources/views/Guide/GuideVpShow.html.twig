{% extends "GoVoyageBundle:Guide:Guide_layout.html.twig" %}
{% block content %}
    {{ 4|rating }}
    <div class="main-cont">
        <div class="body-wrapper">
            <div class="wrapper-padding">
                <div class="page-head">
                    <div class="page-title">Nos Voyages organisés :</div>
                    <div class="clear"></div>
                </div>
                <div class="two-colls">
                    <div class="two-colls-left">
                        <div class="srch-results-lbl fly-in">
                            <span>Chercher un Voyage Organisé.</span>
                        </div>
                        <div class="side-block fly-in">
                            <div class="side-block-search">
                                <div class="page-search-p" align="center">
                                    <button class="srch-btn">Chercher</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="two-colls-right">
                        <div class="two-colls-right-b">
                            <div class="padding">
                                <div class="catalog-head fly-in">
                                    <label style="color: darkorange">Afficher les resultats de recherche triées par:</label>
                                    <label>{{ knp_pagination_sortable(voyagepersonalises,'Nom du Voyage','nom') }}</label>
                                    <label>{{ knp_pagination_sortable(voyagepersonalises,'Nombre des Participants','nbrParticipant')}}</label>
                                    <label>{{ knp_pagination_sortable(voyagepersonalises,'Date Départ','dateDepart') }}</label>
                                    <label>{{ knp_pagination_sortable(voyagepersonalises,'Date Arrivée','dateArrive') }}</label>
                                    <div class="clear"></div>
                                </div>
                                <div class="catalog-row">
                                    {% for v in voyagepersonalises %}
                                        {% if v.idGuideFk == null %}
                                            <!-- // flight-item // -->
                                            <div class="flight-item fly-in">
                                                <div class="flt-i-a">
                                                    <div class="flt-i-b">
                                                        <div class="flt-i-bb">
                                                            <div class="flt-l-a">
                                                                <div class="flt-l-b">
                                                                    <div class="way-lbl">intitulé du voyage :</div>
                                                                    <div class="company"><img alt="" src="{{ asset('img/partner-01.png') }}">
                                                                    </div>
                                                                </div>
                                                                <div class="flt-l-c">
                                                                    <div class="flt-l-cb">
                                                                        <div class="flt-l-c-padding">
                                                                            <div class="flyght-info-head">{{ v.nom }}</div>
                                                                            <!-- // -->
                                                                            <div class="flight-line">
                                                                                <div class="flight-line-a">
                                                                                    <b>Ville de depart</b>
                                                                                    <span>{{ v.villeDepart }}</span>
                                                                                </div>
                                                                                <div class="flight-line-d"></div>
                                                                                <div class="flight-line-a">
                                                                                    <b>Ville destination </b>
                                                                                    <span>{{ v.villeArrive }}</span>
                                                                                </div>
                                                                                <div class="flight-line-d"></div>
                                                                                <div class="flight-line-b">
                                                                                    <b>Plus de detail</b>
                                                                                </div>
                                                                                <div class="clear"></div>
                                                                                <!-- // details // -->
                                                                                <div class="flight-details">
                                                                                    <div class="flight-details-l">
                                                                                        <div class="flight-details-a">
                                                                                            Nom de l'organisateur :
                                                                                        </div>
                                                                                        <div class="flight-details-a">{{ v.dateDepart | date("d/m/y") }}</div>
                                                                                        <div class="flight-details-c">{{ v.villeDepart }}</div>
                                                                                    </div>
                                                                                    <div class="flight-details-r">
                                                                                        <div class="flight-details-c">{{ v.villeDepart }}</div>
                                                                                        <div class="flight-details-a">{{ v.dateArrive | date("d/m/y") }}</div>
                                                                                        <div class="flight-details-c">{{ v.villeArrive }}</div>
                                                                                    </div>
                                                                                    <div class="clear"></div>
                                                                                </div>
                                                                                <!-- \\ details \\ -->
                                                                            </div>
                                                                            <!-- \\ -->
                                                                        </div>
                                                                    </div>
                                                                    <br class="clear"/>
                                                                </div>
                                                            </div>
                                                            <div class="clear"></div>
                                                        </div>
                                                        <br class="clear"/>
                                                    </div>
                                                </div>
                                                <div class="flt-i-c">
                                                    <div class="flt-i-padding">
                                                        <div class="flt-i-price-i">
                                                            <div class="flt-i-price"> nbr de place {{ v.nbrParticipant }}</div>
                                                        </div>
                                                        <a href="{{ path('GuideVpListPostuler',{'id':v.IdVp}) }}" class="srch-btn">Postuler</a>
                                                    </div>
                                                </div>
                                                <div class="clear"></div>
                                            </div>
                                            <!-- \\ flight-item \\ -->
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                <div class="clear"></div>
                            </div>
                            <div  class="navigation" align="center">
                                {{ knp_pagination_render(voyagepersonalises) }}
                            </div>
                        </div>
                        <br class="clear"/>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
{% endblock %}